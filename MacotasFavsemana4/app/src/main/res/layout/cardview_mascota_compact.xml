<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="@dimen/cvRadius"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:elevation="@dimen/elevationCV">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imgMascota"
            android:layout_width="@dimen/cvWidthcompact"
            android:layout_height="@dimen/cvHeightcompact"
            android:src="@drawable/dog1"
            android:scaleType="centerInside"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtLikesDog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pLike"
                android:textSize="@dimen/txtLikesCompact"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/imgLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone2" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>